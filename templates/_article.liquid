<div class="article">

  <h2 class="title">{{ article | link_to_article }}</h2>
  <p class="meta">scris de {{ article.author.login }} pe {{ article.published_at | format_date: 'standard', true }}</p>
  <div class="body">
    {{ article.body }}
  </div>
  <div class="footer">
    <h4 class="meta">in: </h4>
    <p>{{ article | linked_section_list }}</p>
  {% unless article.tags == empty %}
    <h4 class="meta">tag-uri: </h4>
    <p>{{ article | linked_tag_list }}</p>
  {% endunless %}
  {% if article.accept_comments %}
    <h4 class="meta">accepta comentarii</h4>
  {% else %}
    <h4 class="meta">comentariile sunt oprite</h4>
  {% endif %}
  </div>

  <div class="comments">
    <a href="{{ article.url }}#comments">{{ article.comments_count | pluralize: "comment" }}</a>
  </div>
</div>
